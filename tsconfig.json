{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"target": "ES2015",
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"allowJs": true,
		"baseUrl": "./src",
		"strictNullChecks": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		  ]
	}
}
